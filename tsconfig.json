{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "preserve",
		"resolveJsonModule": true,
		"jsxImportSource": "solid-js"
	},
	"include": ["./src", "./__tests__"],
	"exclude": ["node_modules/"]
}
